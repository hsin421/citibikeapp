<script type="text/javascript" src="https://www.google.com/jsapi"></script>

<div class="units-row units-split">
  <div id="weather_wrapper" class="unit-100">
	 <h2> Silver Towers </h2>
    <div id="check"> Today is <%= @w_condition %></div><div><%= image_tag(@icon, class: "weather_icon") %></div>
    <div id="weather"> <%= @temp %> | Wind: <%= @wind[0..23] %> </div>
  </div>
</div>

<div id="stationSearchWrap">
	<header id="searchHeader">Silver Towers Mode</header>

	<ul id="silver_stations">
		<li id="silver_station_header">
			<div id="silver_location_header">Station</div>
			<div id="silver_bike_header">Bikes</div>
			<div id="silver_dock_header">Docks</div>
		</li>
		<li class="silver_station_wrapper">
			<div id="status1" class="status"></div>
			<div id="list1" class="silver_station_location">Silver Tower</div>
			<div class="silver_bike"> <%= @our_station1 %> </div>
			<div class="silver_dock"> <%= @our_docks1 %> </div>
		</li>
		<li class="silver_station_wrapper">
			<div id="status2" class="status"></div>
			<div class="silver_station_location">River Ferry</div>
			<div class="silver_bike"> <%= @our_station2 %></div>
			<div class="silver_dock"> <%= @our_docks2 %></div>
		</li>
		<li class="silver_station_wrapper">
			<div id="status3" class="status"></div>
			<div class="silver_station_location"> BBQ Station</div>
			<div class="silver_bike"><%= @our_station3 %></div>
			<div class="silver_dock"><%= @our_docks3 %></div>
		</li>
		<li class="silver_station_wrapper">
			<div id="status4" class="status"></div>
			<div class="silver_station_location">43 and 10</div>
			<div class="silver_bike"><%= @our_station4 %></div>
			<div class="silver_dock"><%= @our_docks4 %></div>
		</li>
		<li class="silver_station_wrapper">
			<div id="status5" class="status"></div>
			<div class="silver_station_location">37 and 10</div>
			<div class="silver_bike"><%= @our_station5 %></div>
			<div class="silver_dock"><%= @our_docks5 %></div>
		</li>
		<li class="silver_station_wrapper">
			<div id="status6" class="status"></div>
			<div class="silver_station_location">Javits Center</div>
			<div class="silver_bike"><%= @our_station6 %></div>
			<div class="silver_dock"><%= @our_docks6 %></div>
		</li>
	</ul>

	<div id="silver_bus">
		<h4> Updated at: <%= @time %> </h4>
		
		<div id="next_bus">
			<h2> The Next Bus is estimated to arrive in </h2>
			<div id="next_bus_time"><%= @next +3  %></div>
			<p>minutes</p>
		</div>

			<div class="hidden"> <h3> Next bus schedule is: <%= @timep %>, <%=@timenext %>, <%= @timenn %> and now is: <%= @now %> </h3> </div>
	</div>

</div>
<div class="push"></div>
</div>
