function clickable() {
		var stlg = $(".station").length;
		var myArray = [];
		if(stlg>0){
		for(i=0; i<stlg; i++){
			myArray.push("#"+$(".station")[i].id)
		};
		for(j=0; j<myArray.length; j++){
			
			$(myArray[j]).on("click", function(){
			$(".station").fadeOut();
			$(".station").remove();
			$("#stationlist").css("background-color", "black");
			$("#stationlist").append("<img src='/crop.gif' id='loader' >");
              $.ajax({
                     type: 'POST',
       				 url: '/data',
     			     data: {station_select: $(this)[0].id},
              });

				
			})
		}}
		};


clickable();

